{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",  // Added this
    "noEmit": true,  // Added this, to prevent TypeScript from emitting JS files
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],  // Add jest to the types array
    "lib": ["dom", "es6"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
